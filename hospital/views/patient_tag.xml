<?xml version="1.0" encoding="utf-8"?>
<odoo>   

    <record id="patient_tag_view_form" model="ir.ui.view">
        <field name="name">patient_tag.view.form</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"></field>
                        <field name="active" widget="boolean_toggle"></field>
                        <field name="color" widget="color_picker"></field>
                        <field name="color2" widget="color"></field>
                    </group>
                </sheet>
                
            </form>
        </field>
    </record>

    <record id="patient_tag_view_tree" model="ir.ui.view">
        <field name="name">patient_tag.view.tree</field>
        <field name="model">patient.tag</field>
        <field name="arch" type="xml">
            <tree string="Tree">
                <field name="name"></field>
                <field name="active" widget="boolean_toggle"></field>
                <field name="color" widget="color_picker"></field>
                <field name="color2" widget="color"></field>
            </tree>
        </field>
    </record>

    

</odoo> 